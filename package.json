{
  "name": "lab-chat-p2p",
  "version": "1.0.0",
  "description": "A simple chat P2P using sockets",
  "main": "dist/index.js",
  "scripts": {
    "dev:server": "tsnd --respawn --transpile-only src/cli.ts server --dev",
    "dev:client": "tsnd --respawn --transpile-only src/cli.ts client --dev",
    "build": "rm -rf dist && tsc -b",
    "server": "ts-node src/cli.ts server",
    "client": "ts-node src/cli.ts client"
  },
  "keywords": [
    "Chat",
    "P2p",
    "nodejs",
    "example"
  ],
  "author": "Guihgo",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "inquirer": "8.2.0"
  }
}
